{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "preserve",
    "noEmit": true,
    "lib": ["es2022"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "theme.ts", "env.d.ts", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["./src/legacy-app/**/*.ts", "./src/legacy-app/**/*.tsx"]
}
